<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="quickshare"></ActionBar>
    </Page.actionBar>
    <TabView>
        <TabView.items>
            <TabViewItem title="Transfer">
                <TabViewItem.view>
                    <StackLayout rows="auto, *" columns="2*, *">
                        <TextField id="email" text="{{ email }}" hint="Enter an email" row="0" col="0" type="email" autocorrect="false" autocapitalizationType="none"/>
                        <Button text="Upload Image" row="0" col="1" tap="onSelectSingleTap"/>
                        <Button text="Logout"  tap="logout" class="logout"/>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Files">
                <TabViewItem.view>
                    <GridLayout columns="110, auto" rows="*, *, *, *" class="cell-view">
                        <Image rowSpan="4" width="94" height="94" src="{{ thumb }}"/>
                        <Label col="1" row="0" text="{{ uri }}" textWrap="true"/>
                    </GridLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>
