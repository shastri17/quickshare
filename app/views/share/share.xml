<Page loaded="pageLoaded">
    <Page.actionBar>
        <ActionBar title="quickshare"></ActionBar>
    </Page.actionBar>
    <TabView>
        <TabView.items>
            <TabViewItem title="Transfer">
                <TabViewItem.view>
                    <StackLayout rows="auto, *" columns="2*, *">
                        <TextField id="email" text="{{ email }}" hint="Enter an email" row="0" col="0" type="email" autocorrect="false" autocapitalizationType="none"/>
                        <Button text="Upload Image" row="0" col="1" tap="onSelectSingleTap"/>
                        <Button text="Logout" tap="logout" class="logout"/>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="Files">
                <TabViewItem.view>

                    <StackLayout rows="*, auto, auto" class="pick-page">
                        <Button text="Delete all" tap="deleteall" class="logout"/>
                        <ListView items="{{ imageItems }}">
                            <ListView.itemTemplate>
                                <GridLayout columns="180, auto" rows="*, *" class="cell-view">
                                    <Image rowSpan="8" width="94" height="94" src="{{ thumb }}" tap="listitem"/>
                                    <Button text="Delete" row="0" col="1" tap="delete" img="{{ name}}" class="logout"/>
                                </GridLayout>
                            </ListView.itemTemplate>
                        </ListView>
                    </StackLayout>
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
</Page>
