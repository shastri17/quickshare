
<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <TabView>
   <TabView.items>
     <TabViewItem title="Transfer">
       <TabViewItem.view>
           <GridLayout rows="auto, *" columns="2*, *">
               <TextField id="email" text="{{ email }}" hint="Enter an email" row="0" col="0" />
               <Button text="Upload Image" row="0" col="1" tap="onSelectSingleTap"  />
           </GridLayout>
       </TabViewItem.view>
     </TabViewItem>
     <TabViewItem title="Files">
       <TabViewItem.view>

                  <GridLayout columns="110, auto" rows="*, *, *, *" class="cell-view">
                      <Image rowSpan="4" width="94" height="94" src="{{ thumb }}" />
                      <Label col="1" row="0" text="{{ uri }}" textWrap="true"/>
                  </GridLayout>

       </TabViewItem.view>
     </TabViewItem>
   </TabView.items>
 </TabView>

</Page>
