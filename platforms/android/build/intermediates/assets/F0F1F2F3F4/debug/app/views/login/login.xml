<Page loaded="loaded" busy="{{ isLoading }}" >
    <Page.actionBar >
        <ActionBar class="bg" title="login">
        </ActionBar>
    </Page.actionBar>
    <ScrollView>
    <StackLayout orientation="vertical" class="form">
        <Image src="res://logo" stretch="none" horizontalAlignment="center" class="image"/>
        <StackLayout orientation="vertical" class="textfields">
        <TextField id="username" text="{{ username }}" hint="Username" type="text" autocorrect="false" autocapitalizationType="none" class="input input-border"/>
        <TextField secure="true" text="{{ password }}" hint="Password" class="input input-border"/>
        </StackLayout>
            <Button text="LOGIN" tap="signIn" class="loginlink"/>
            <StackLayout orientation="horizontal" class="regform">
                <Label text="Don't have an account?" class="maintext"/>
                <Button text="Signup" tap="register" class="reglink"/>
            </StackLayout>
    </StackLayout>
</ScrollView>
</Page>
